{
  "components/custom/homepage-recent-blogs": "{{#unless theme_settings.hide_hp_blog_section}}\n    {{#if blog.recent_posts}}\n        <div class=\"hp-recent-blogs{{#unless theme_settings.disable_animation}} animation-enabled{{/unless}}\">\n            <div class=\"container\">\n                <div class=\"blog-content{{#if theme_settings.show_hp_blog_images}} show-blog-img{{/if}}\">\n                    <h2 class=\"hp-section-title\">{{lang 'common.blog_title'}}</h2>\n                    <div class=\"blog-grid\">\n                        {{#each blog.recent_posts}}\n                            <div class=\"blog-post\">\n                                <div class=\"blog-post-wrapper\">\n                                    <a class=\"blog-img\" href=\"{{url}}\">\n                                        <img src=\"{{#if thumbnail}}{{getImage thumbnail 'gallery_size'}}{{else}}{{cdn '/assets/img/missing-img.png'}}{{/if}}\" alt=\"{{#if thumbnail.alt}}{{thumbnail.alt}}{{else}}Blog Image{{/if}}\">\n                                    </a>\n                                    <div class=\"blog-details\">\n                                        <p class=\"blog-date\">{{date_published}}</p>\n                                        <h3 class=\"blog-title\"><a href=\"{{url}}\">{{title}}</a></h3>\n                                    </div>\n                                </div>\n                            </div>\n                        {{/each}}\n                    </div>\n                </div>\n            </div>\n        </div>\n    {{/if}}\n{{/unless}}\n"
}